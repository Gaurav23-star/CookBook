<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8sp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="60sp"
        android:layout_height="60sp"
        android:id="@+id/notification_image_profile"
        android:src="@drawable/chef_profile"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10sp"
        android:orientation="vertical"
        android:layout_toEndOf="@+id/notification_image_profile"
        android:layout_toStartOf="@id/notification_post_image">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/notification_userName"
            android:textStyle="bold"
            android:text="@string/Username"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/notification_text"
            android:text="@string/test_notification_text"
            android:maxLines="5" />



    </LinearLayout>



        <ImageView
            android:layout_width="55sp"
            android:layout_height="55sp"
            android:id="@+id/notification_post_image"
            android:src="@drawable/foodplaceholder"
            android:layout_alignParentEnd="true"/>



</RelativeLayout>